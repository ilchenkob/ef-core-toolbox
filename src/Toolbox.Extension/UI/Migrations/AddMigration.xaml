<platformUI:DialogWindow x:Class="Toolbox.Extension.UI.Migrations.AddMigration"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:platformUI="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.15.0"
             xmlns:controls="clr-namespace:Toolbox.Extension.UI.Controls"
             mc:Ignorable="d"
             WindowStartupLocation="CenterScreen"
             Title="Add migration"
             VerticalAlignment="Center"
             HorizontalAlignment="Center"
             MinHeight="200" MinWidth="500"
             Height="300" Width="580">
    <StackPanel Orientation="Vertical" Margin="16,8">
        <controls:ComboBoxItem Title="Project"/>
        <controls:ComboBoxItem Title="Database context"/>
        <controls:TextInput Title="Migration namespace"/>
        <controls:TextInput Title="Migration name"/>
    </StackPanel>
</platformUI:DialogWindow>
