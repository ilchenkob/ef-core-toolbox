<UserControl x:Class="Toolbox.Extension.UI.Scaffolding.OutputParams"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Toolbox.Extension.UI.Scaffolding"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Vertical">
            <Label Margin="0,-4,0,2" Content="Project"/>
            <ComboBox
                Margin="0,0,0,4"
                Height="24"
                VerticalContentAlignment="Center"
                SelectedItem="{Binding SelectedProjectName}"
                ItemsSource="{Binding ProjectNames}"/>
        </StackPanel>
        <local:TextInput Title="Namespace" Value="{Binding Namespace, Mode=TwoWay}"/>
        <local:TextInput Title="Database context class name" Value="{Binding ContextName, Mode=TwoWay}"/>
        <Grid Margin="0,12,0,4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <CheckBox Grid.Column="0"
                      Content="Use database names"
                      IsChecked="{Binding UseDbNames}"/>
            <CheckBox Grid.Column="1"
                      Content="Use data annotation attributes"
                      IsChecked="{Binding UseDataAnnotations}"/>
        </Grid>
        <local:TextInput Title="Output folder" Value="{Binding OutputPath, Mode=TwoWay}"/>
    </StackPanel>
</UserControl>
